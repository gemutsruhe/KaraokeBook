<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="data"
            type="com.karaoke.karaokebook.data.cell.SongCellData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/bookmarkSongNumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@{data.number}"
            android:textSize="14sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/bookmarkSongNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@{data.title}"
            android:textSize="14sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/bookmarkSingerTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@{data.singer}"
            android:textSize="14sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{+data.pitch}"
            android:textSize="14sp"
            android:padding="8dp" />
    </LinearLayout>
</layout>
